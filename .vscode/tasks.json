{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/idi.c",
                "-o",
                "${workspaceFolder}/build/a.out",
                "-std=c89",
                "-Wall",
                "-Wextra",
                "-Wstrict-prototypes",
                "-Wold-style-definition",
                "-Wmissing-prototypes",
                "-Wmissing-declarations",
                "-Wno-comment"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build gui",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/idi.c",
                "-o",
                "${workspaceFolder}/build/a.out",
                "-I/usr/local/include/SDL2",
                "-D_THREAD_SAFE",
                "-L/usr/local/lib",
                "-lSDL2",
                "-std=c89",
                "-Wall",
                "-Wextra",
                "-Wstrict-prototypes",
                "-Wold-style-definition",
                "-Wmissing-prototypes",
                "-Wmissing-declarations",
                "-Wno-comment"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
